{
  "name": "angular-structure",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:open": "ng serve --host 0.0.0.0",
    "start:dev": "concurrently \"npm run mocks\" \"npm start\"",
    "start:prod": "npm run build:prod && serve --single -l 4200",
    "start:prod:mocks": "npm run build:prod && concurrently \"npm run mocks\" \"serve --single -l 4200\"",
    "build": "ng build",
    "build:dev": "ng build -c dev",
    "build:test": "ng build -c test",
    "build:prod": "ng build --prod",
    "build:ci:dev": "npm run lint && npm run test:coverage && npm run build:dev",
    "build:ci:test": "npm run lint && npm run test:coverage && npm run build:test",
    "build:ci:prod": "npm run lint && npm run test:coverage && npm run build:prod",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:coverage": "ng test --code-coverage --watch=false --browsers ChromeHeadless",
    "tslint": "ng lint",
    "tslint-fix": "ng lint broker-ui --fix",
    "eslint": "eslint -c .eslintrc --ext .js,.jsx,.mjs",
    "stylelint": "stylelint --config .stylelintrc **/*.{scss,less,css}",
    "lint": "npm run eslint && npm run stylelint",
    "mocks": "nodemon --experimental-modules --es-module-specifier-resolution=node ./mocks/servers.mjs",
    "analyse-bundle": "ng build --prod --statsJson=true && webpack-bundle-analyzer ./dist/stats.json",
    "update": "npm --no-git-tag-version version patch",
    "update:minor": "npm --no-git-tag-version version minor",
    "update:major": "npm --no-git-tag-version version major",
    "pre-commit": "npm run lint && npm run test:coverage && npm run build:prod"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "@ngx-translate/core": "^13.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.3",
    "@angular/cli": "~12.2.3",
    "@angular/compiler-cli": "~12.2.0",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "bootstrap-scss": "^5.1.0",
    "eslint": "^7.32.0",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "~4.3.5"
  }
}
